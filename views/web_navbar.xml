<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>   
        <!-- navbar -->
        <template id="layout" name="Main layout" inherit_id="portal.frontend_layout">
            <xpath expr="//div[@id='top_menu_container']" position="replace">
                <a href="/" class="navbar-brand logo me-4">
                    <span role="img" aria-label="Simpasar" title="Simpasar" data-oe-model="pasar" data-oe-id="1" data-oe-field="logo" data-oe-type="image" data-oe-expression="web_simpasar.logo"><img src="/web_simpasar/static/src/img/logo_kablamongan.png" class="img img-fluid" width="95" height="40" alt="Simpasar" loading="lazy"/></span>
                </a>
                <div id="top_menu_collapse" class="collapse navbar-collapse order-last order-lg-0">
                    <ul id="top_menu" role="menu" class="nav navbar-nav o_menu_loading flex-grow-1">                    
                        <li role="presentation" class="nav-item">
                            <a role="menuitem" href="/" class="nav-link">
                                <span data-oe-model="website.menu" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Home</span>
                            </a>
                        </li>
                        <li role="presentation" class="nav-item">
                            <a role="menuitem" href="/denah" class="nav-link ">
                                <span data-oe-model="website.menu" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Denah Pasar</span>
                            </a>
                        </li>
                        <li role="presentation" class="nav-item">
                            <a role="menuitem" href="/visimisi" class="nav-link ">
                                <span data-oe-model="website.menu" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Visi Misi</span>
                            </a>
                        </li>
                        <li role="presentation" class="nav-item">
                            <a role="menuitem" href="/infokomoditas" class="nav-link ">
                                <span data-oe-model="website.menu" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Info Komoditas</span>
                            </a>
                        </li>
                        <li role="presentation" class="nav-item">
                            <a role="menuitem" href="/pendaftaran" class="nav-link ">
                                <span data-oe-model="website.menu" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Pendaftaran</span>
                            </a>
                        </li>
                    </ul>
                    <ul id="top_menu" class="nav navbar-nav ms-auto">
                        <t t-call="portal.placeholder_user_sign_in">
                            <t t-set="_item_class" t-value="'nav-item'"/>
                            <t t-set="_link_class" t-value="'nav-link'"/>
                        </t>
                        <t t-call="portal.user_dropdown">
                            <t t-set="_user_name" t-value="true"/>
                            <t t-set="_item_class" t-value="'nav-item dropdown'"/>
                            <t t-set="_link_class" t-value="'nav-link'"/>
                            <t t-set="_dropdown_menu_class" t-value="'dropdown-menu-end'"/>
                        </t>
                    </ul>   
                </div>
                <!-- navigation bar -->
                <button type="button" t-attf-class="navbar-toggler #{_toggler_class}" data-bs-toggle="collapse" data-bs-target="#top_menu_collapse">
                    <span class="navbar-toggler-icon o_not_editable"/>
                </button> 
             </xpath>
        </template>    
    </data>
</odoo>
